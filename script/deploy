#!/usr/bin/env bash
cd "$(dirname $0)/.."
[ -f ".h" ] || curl -s -o ".h" -L https://git.io/v14Zc; . ".h"

./script/bootstrap

title "Deploying updates to GitHub..."

rm -rf public/*
hugo
cd public
git add .
DATE="$(date)"
git commit -m "Site build $DATE"
git push origin master
cd ..
git add public
git commit -m "Site build $DATE"
