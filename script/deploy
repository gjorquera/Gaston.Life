#!/usr/bin/env bash
cd "$(dirname $0)/.."
[ -f ".h" ] || curl -s -o ".h" -L https://git.io/v14Zc; . ".h"

set -e

./script/bootstrap

DATE="$(date)"

title "Building site..."

rm -rf public/*
hugo
cd public
git add .
git commit -m "Site build $DATE"

title "Deploying site to GitHub..."

git push origin master
cd ..
git add public
git commit -m "Site build $DATE"
